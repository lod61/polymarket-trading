# Polymarket API Configuration
# For market data (public, no auth needed)
POLYMARKET_DATA_API_URL=https://gamma-api.polymarket.com

# For trading (requires authentication)
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_API_URL=https://clob.polymarket.com
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Chainlink Configuration (On-Chain Price Feeds)
# Polygon RPC endpoint for Chainlink Price Feeds
# Free options: https://polygon-rpc.com or https://rpc.ankr.com/polygon
# Or use your own RPC provider (Alchemy, Infura, etc.)
POLYGON_RPC_URL=https://polygon-rpc.com

# Trading Configuration
MIN_WIN_PROBABILITY=0.60
MAX_POSITION_SIZE_USD=100
MIN_MARKET_LIQUIDITY_USD=1000
MAX_SLIPPAGE_PERCENT=2

# Risk Management
MAX_DAILY_LOSS_USD=500
MAX_POSITIONS=5
STOP_LOSS_PERCENT=10

# Monitoring
POLL_INTERVAL_MS=5000
LOG_LEVEL=info

